<h1>Карточки</h1>
<div class="media">
  <div class="media-body">
  <table class="table table-hover">
  <tr>
    <th>Оригинальный текст</th>
    <th>Перевод текста</th>
    <th>Дата проверки</th>
    <th></th>
    <th></th>
  </tr>

  <% @cards.each do |card| %>
    <% if current_user.id == card.user_id %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></>
        <td><%= card.review_date.try(:strftime, '%d/%m/%Y')%></td>
        <td><%= link_to "Изменить", edit_card_path(card),  class: "btn btn-small btn-warning"%></td>
        <td><%= link_to "Удалить", card, method: :delete, data: { confirm: "Вы уверенны?" }, class: "btn btn-small btn-danger"%></td>
      </tr>
    <% end %>
  <% end %>
</table>
</div>
</div>
